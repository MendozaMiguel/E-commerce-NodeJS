<!doctype html>
<html lang="fr">


<% include squelette/header.ejs%>


<body>
<% include ./squelette/navbar.ejs %>

<div class="container-fluid">

    <h1>Panier</h1>
    <br>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <th>Nom</th>
            <th>Description</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Actions</th>
            </thead>
            <% resultat.forEach(function(item){ %>
            <tr>

                <td><%= item.nom %></td>
                <td><%= item.description %></td>
                <td><%= item.prix %>€</td>
                <td><input type="number" min="1" value="<%= item.quantite %>"></td>
                <td width=300>
                    <form action="/panier/supprimer/<%=item.produit_id%>" method="POST">
                        <input type="hidden" name="_method" value="delete"/>
                        <button type="submit" class="btn btn-danger">Supprimer</button>

                    </form>
                </td>
            </tr>
            <% }) %>
        </table>
    </div>
</div>


</body>
</html>